@model IEnumerable<_04_Business.Models.MachineModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-bordered " id="myTable" style="background-color: #120017; background-image: url( https://www.transparenttextures.com/patterns/diagmonds-light.png); ">
    <thead style="color: #ffd800">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeriNO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionId)
            </th>
            <th>Makineler ile İlgili İşlemler</th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody style="color:#ffffff">
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeriNO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SectionId)
                </td>
                <td>
                    <button type="button" class="btn btn-success">@Html.ActionLink("Tüm Hatırlamaları Göster", "Sergi", "Hatırlatıcı", new { id = item.Id }, "")</button>

                    <button type="button" class="btn btn-warning"> @Html.ActionLink("Yeni Hatırlatıcı Oluştur", "Create", "Hatırlatıcı", new { id = item.Id }, "")</button>
                </td>
                <td>
                    <button type="button" class="btn btn-light">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>  |
                    <button type="button" class="btn btn-light">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>  |
                    <button type="button" class="btn btn-light">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button> 
                </td>

            </tr>
        </tbody>
    }

</table>

